<Window x:Class="SimpleImageStorage.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressDialog" Height="150" Width="529" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="ProgressText" x:Name="progressTextBlock" Grid.Row="0" Margin="10,5" />
        <ProgressBar Grid.Row="1" Margin="10" x:Name="progressBar" />
    </Grid>
</Window>
